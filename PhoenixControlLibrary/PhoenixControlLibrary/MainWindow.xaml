<Window x:Class="PhoenixControlLibrary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525"
        xmlns:pcl="clr-namespace:PhoenixControlLib;assembly=PhoenixControlLib">
    <StackPanel Margin="20" >
        <pcl:NumericSpinnerControl Width="100" Minimum="0" Value="1" IncrementValue="0.5"/>

        <GroupBox Header="Group 1">
            <StackPanel>
                <pcl:RadioToggleButton x:Name="G1A" Content="Group 1 - A" GroupName="Test1"/>
                <pcl:RadioToggleButton Content="Group 1 - B" GroupName="Test1"/>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Group 2">
            <StackPanel>
                <pcl:RadioToggleButton Content="Group 2 - A" GroupName="Test2"/>
                <pcl:RadioToggleButton Content="Group 2 - B" GroupName="Test2"/>
            </StackPanel>
        </GroupBox>
    </StackPanel>
</Window>
